<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".SettingsFragment"
    tools:layout="@layout/fragment_settings">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="@color/material_dynamic_neutral60"
        android:textSize="@dimen/large_text" />

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/material_dynamic_neutral60" />

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_dark_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Dark Mode"
            android:textSize="@dimen/switch_text_size"/>

        <Switch
            android:id="@+id/switchNotificationExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiry Notification"
            android:textSize="@dimen/switch_text_size"/>

        <Switch
            android:id="@+id/switchNotificationTwoDayToExpire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two Day To Expire Notification"
            android:textSize="@dimen/switch_text_size"/>

        <Switch
            android:id="@+id/switchNotificationFiveDayToExpire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Five Day To Expire Notification"
            android:textSize="@dimen/switch_text_size"/>

    </LinearLayout>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="@dimen/button_text_size"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/transparent" />

</LinearLayout>
