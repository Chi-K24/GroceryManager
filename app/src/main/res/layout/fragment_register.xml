<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RegisterFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/forgotpassword"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="-40dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/animation_foodie"
        android:layout_gravity="center_horizontal"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:hint="Email"
            android:textColorHint="@color/forgotpassword"
            android:textColor="@color/forgotpassword"
            android:layout_marginTop="10dp"
            android:background="@drawable/input"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:maxLines="1"
            android:singleLine="true"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:inputType="textPassword"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="15dp"
        android:hint="Password"
        android:textColorHint="@color/forgotpassword"
        android:textColor="@color/forgotpassword"
        android:layout_marginTop="30dp"
        android:background="@drawable/input"/>

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:text="Sign Up"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:backgroundTint="@color/forgotpassword"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

    <View
        android:id="@+id/blurOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/animation_lnsf4bk9"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        android:visibility="gone"/>

</FrameLayout>
